<div class='content'>
  <div class='sign-form'>
    <h2 class='content-head is-center'>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'pure-form pure-form-aligned' }) do |f| %>

      <%- if flash[:alert].present? %>
        <div id='error_explanation'>
          <%= flash[:alert] %>
        </div>
      <% end %>

      <div class='pure-control-group'>
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class='pure-control-group'>
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: 'off' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class='pure-controls'>
          <%= f.label :remember_me  do %>
            <%= 'remember me' %>
            <%= f.check_box :remember_me, class: 'pure-checkbox' %>
          <% end %>
        </div>
      <% end -%>

      <div class='pure-actions'>
        <%= f.submit 'Log in', class: 'pure-button pure-button-primary' %>
      </div>
    <% end %>
  </div>
</div>
